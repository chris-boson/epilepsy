{
    "configurations": [
        {
            "name": "Inference",
            "type": "python",
            "request": "launch",
            "module": "inference.handler",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Train Debug",
            "type": "python",
            "request": "launch",
            "module": "train",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0",
                "TOKENIZERS_PARALLELISM": "false"
            },
            "args": [
                "--project=epilepsy",
                "--experiment_name=debug",
                "--output_dir=~/projects/",
                "--config=./config/config_financial_impact_small.json",
                "--data_dir=~/projects/epilepsy/datasets/financial_impact/general.csv"
            ]
        },
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "module": "train",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "TOKENIZERS_PARALLELISM": "false"
            },
            "args": [
                "--project=epilepsy",
                "--output_dir=~/projects/",
                "--config=./config/config_financial_impact.json",
                "--data_dir=~/projects/epilepsy/datasets/financial_impact/general.csv"
            ]
        }
    ]
}
